#:kivy 1.10.0

RootWidget:
    # import container
    container: container

    StackLayout:
        orientation: 'tb-lr'
        padding: 20
        spacing: 20

        ToggleButton:
            text: "Simple\n  Calc"
            size_hint: .15, .25

            on_release: app.screen_select('simple_calc')

            group: 'mode'

        ToggleButton:
            text: "Programming\n  Calculator"
            size_hint: .15, .25

            on_release: app.screen_select('program_calc')

            group: 'mode'

        ToggleButton:
            text: "   Number\nConversion"
            size_hint: .15, .25

            on_release: app.screen_select('num_conversion')

            group: 'mode'

        ToggleButton:
            text: "   Quick\nReference"
            size_hint: .15, .25

            on_release: app.screen_select('quick_ref')

            group: 'mode'

        BoxLayout:
            size_hint: .85, .85
            pos: .25, 20

            id: container