#:kivy 1.10.0

RootWidget:
    # import container
    container: container

    StackLayout:
        orientation: 'tb-lr'
        padding: 20
        spacing: 20

        ToggleButton:
            text: "Simple"
            size_hint: .15, .25

            group: 'mode'

        ToggleButton:
            text: "Programming"
            size_hint: .15, .25

            group: 'mode'

        ToggleButton:
            text: "   Number\nConversion"
            size_hint: .15, .25

            group: 'mode'

        ToggleButton:
            text: "Quick Reference"
            size_hint: .15, .25

            on_release: app.screen_select('quick_ref')

            group: 'mode'

        BoxLayout:
            size_hint: .85, .85
            pos: .25, 20

            id: container