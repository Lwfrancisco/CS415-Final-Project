#:kivy 1.10.0


# Define id so I can refer to the ProgrammingCalcGridLayout
# class functions
# Display points to the entry widget
# CalcGridLayout automatically places the BoxLayout's evenly within the 5 rows.

CalcGridLayout:
    id: calculator
    display: entry
    rows: 9
    padding: 20
    spacing: 20

    font_size: 32

    Label:
        font_size: 48
        text: "Programmer's Calculator"

    # Where input is displayed
    BoxLayout:
        orientation: 'horizontal'

        TextInput:
            id: entry
            font_size: 24
            multiline: False


    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        Button:
            text: "<"
            on_press: entry.text += self.text
        Button:
            text: ">"
            on_press: entry.text += self.text
        Button:
            text: "<<"
            on_press: entry.text += self.text
        Button:
            text: ">>"
            on_press: entry.text += self.text
        Button:
            text: "DEL"
            on_press: entry.text = entry.text[:-1]



    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        Button:
            text: "D"
            on_press: entry.text += self.text
        Button:
            text: "E"
            on_press: entry.text += self.text
        Button:
            text: "F"
            on_press: entry.text += self.text
        Button:
            text: "%"
            on_press: entry.text += self.text
        Button:
            text: "NOT"
            on_press: entry.text += '!'


    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        Button:
            text: "A"
            on_press: entry.text += self.text
        Button:
            text: "B"
            on_press: entry.text += self.text
        Button:
            text: "C"
            on_press: entry.text += self.text
        Button:
            text: "+"
            on_press: entry.text += self.text
        Button:
            text: "XOR"
            on_press: entry.text += '^'


    # When buttons are pressed update the entry
    BoxLayout:
        spacing: 10
        Button:
            text: "7"
            on_press: entry.text += self.text
        Button:
            text: "8"
            on_press: entry.text += self.text
        Button:
            text: "9"
            on_press: entry.text += self.text
        Button:
            text: "-"
            on_press: entry.text += self.text
        Button:
            text: "AND"
            on_press: entry.text += '&&'

    BoxLayout:
        spacing: 10
        Button:
            text: "4"
            on_press: entry.text += self.text
        Button:
            text: "5"
            on_press: entry.text += self.text
        Button:
            text: "6"
            on_press: entry.text += self.text
        Button:
            text: "*"
            on_press: entry.text += self.text
        Button:
            text: "OR"
            on_press: entry.text += '||'

    BoxLayout:
        spacing: 10
        Button:
            text: "1"
            on_press: entry.text += self.text
        Button:
            text: "2"
            on_press: entry.text += self.text
        Button:
            text: "3"
            on_press: entry.text += self.text
        Button:
            text: "/"
            on_press: entry.text += self.text
        Button:
            text: "~"
            on_press: entry.text += self.text

	# Empties string containing numerical data when "AC" is pressed.
    # When equals is pressed pass text in the entry
    # to the calculate function
    BoxLayout:
        spacing: 10
        size_hint_y: 2
        Button:
            text: "AC"
            on_press: entry.text = ""
        Button:
            text: "0"
            on_press: entry.text += self.text
        Button:
            text: "."
        Button:
            text: "="
            on_press:
                print(entry.text + "=")
            	calculator.calculate(entry.text)
            	print(entry.text)