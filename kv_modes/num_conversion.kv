#:kivy 1.10.0


StackLayout:
    orientation: 'tb-lr'

    Label:
        text: 'Base Unit Conversions'
        size_hint: 1, .15

    # Where input is displayed

    TextInput:
        id: entry
        font_size: 32
        multiline: False

    BoxLayout:
        orientation: "horizontal"
        size_hint: 1, .55

        padding: 20
        spacing: self.width * .33

        Spinner:
            text: "Unit"
            values: "Decimal", "Hexadecimal", "Octal", "Binary"

            size_hint: .15, .25

        Spinner:
            text: "Unit"
            values: "Decimal", "Hexadecimal", "Octal", "Binary"

            size_hint: .15, .25

